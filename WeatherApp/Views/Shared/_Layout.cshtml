<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Weather by Geo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top" style="background-color: #235892 !important ">
            <a href="~/Home/Index"><img src="~/Images/logo.png" width="49" height="47" alt="logo" /></a>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto offset-1 ">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Weather in World</a>
                    </li>
                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    @Html.Partial("_LoginPartial")
                </form>
            </div>
        </nav>
    </header>
<br/>
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p class="text-center">&copy; @DateTime.Now.Year - Weather TEST APP</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
