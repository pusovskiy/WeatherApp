@if (User.Identity.IsAuthenticated)
{

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Hello " + User.Identity.Name
                                 + "!","UserProfile","Account","Account",htmlAttributes: new {@class="nav-link",title="To profile"})
            </li>
            <li class="nav-item">
                @Html.ActionLink("Log Off", "LogOff", "Account", null, new { @class = "nav-link" })
            </li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })    
        </li>
        <li class="nav-item">
            @Html.ActionLink("Registration", "Registration", "Account", null, new { @class = "nav-link" })
        </li>
    </ul>
}
